<h1><%= l('sms77.voice') %> - sms77.io</h1>

<%= render :partial => 'sms77/response' %>

<%= form_tag({}, :method => 'post', :id => 'sms77_compose') do %>
  <%= render :partial => 'sms77/filters' %>

  <%= render :partial => 'sms77/to' %>

  <%= label_tag 'from', l('sms77.labels.from') %>
  <%= text_field_tag 'from', params[:from] || @settings.value['voice_from'], :style => 'width: 100%' %>
  <hr>

  <%= label_tag 'xml', l('sms77.labels.xml') %>
  <%= check_box_tag('xml', 1, params[:xml]) %>

  <hr>

  <%= render :partial => 'sms77/text', :locals => { :maxlength => 10000 } %>

  <%= submit_tag l(:button_submit) %>
<% end %>

<%= render :partial => 'sms77/js' %>